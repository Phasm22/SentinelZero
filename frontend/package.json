{
  "name": "sentinelzero",
  "version": "1.0.0",
  "description": "A lightweight, local network scan dashboard for cybersecurity homelabs.",
  "main": "app.py",
  "scripts": {
    "dev": "cd react-sentinelzero && npm run dev",
    "dev:backend": "cd ../backend && uv run python app.py",
    "dev:frontend": "cd react-sentinelzero && npm run dev",
    "dev:all": "cd react-sentinelzero && npm run dev:all",
    "install:frontend": "cd react-sentinelzero && npm install",
    "install:backend": "cd ../backend && uv sync",
    "build:frontend": "cd react-sentinelzero && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd ../backend && uv run pytest tests/ -v --cov=src --cov=app.py --cov-report=html --cov-report=term",
    "test:frontend": "cd react-sentinelzero && npm run test",
    "test:unit": "cd ../backend && uv run pytest tests/unit/ -v",
    "test:integration": "cd ../backend && uv run pytest tests/integration/ -v",
    "test:e2e": "cd ../backend && uv run pytest tests/e2e/ -v",
    "test:coverage": "cd ../backend && uv run pytest tests/ --cov=src --cov=app.py --cov-report=html --cov-report=term-missing",
    "test:playwright": "npx playwright test",
    "test:playwright:ui": "npx playwright test --ui",
    "lint": "cd ../backend && uv run flake8 app.py src/ tests/",
    "lint:frontend": "cd react-sentinelzero && npm run lint",
    "format": "cd ../backend && uv run black app.py src/ tests/",
    "format:frontend": "cd react-sentinelzero && npm run format",
    "pre-commit": "npm run lint && npm run test:backend",
    "sync": "cd ../backend && uv sync",
    "add": "cd ../backend && uv add",
    "remove": "cd ../backend && uv remove"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phasm22/root.git"
  },
  "keywords": [
    "cybersecurity",
    "network-scanning",
    "dashboard"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Phasm22/root/issues"
  },
  "homepage": "https://github.com/Phasm22/root#readme",
  "dependencies": {
    "@playwright/test": "^1.54.1"
  },
  "devDependencies": {
    "vite": "^7.0.6"
  }
}
